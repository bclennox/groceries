<form class="form-inline item-form">
  <div class="form-group">
    <label class="sr-only" for="item-person">Person</label>

    <select id="item-person" class="form-control" onchange={{action 'personIdChanged' value='target.value'}}>
      <option>You…</option>
      {{#each trip.people as |person|}}
        <option value={{person.id}}>{{person.name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label class="sr-only" for="item-contents">Item</label>
    {{input id="item-contents" class="form-control" type="text" value=itemValue placeholder="…will bring…"}}
  </div>

  <div class="form-group">
    <button class="btn btn-primary" {{action 'add'}} disabled={{isDisabled}}>Add</button>
  </div>
</form>
